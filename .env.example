# Recruiter Email Tracker - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_PATH=database.db

# Mailgun Configuration (Required for email processing)
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_WEBHOOK_SIGNING_KEY=your_webhook_signing_key_here
MAILGUN_DOMAIN=yourdomain.com

# Flask Configuration
FLASK_ENV=development
FLASK_HOST=0.0.0.0
FLASK_PORT=5001

# Gmail Configuration (for single user)
GMAIL_EMAIL=your.email@gmail.com
GMAIL_PASSWORD=your_app_password_here
GMAIL_LABEL=Recruiters

# Email Check Configuration
CHECK_INTERVAL_MINUTES=20
EMAIL_LOOKBACK_DAYS=3

# Notion Configuration (for single user)
NOTION_API_KEY=secret_your_notion_integration_token
DATABASE_ID=your_notion_database_id

# User Name
USER_NAME=Your Name

# Production Settings (for deployment)
# FLASK_ENV=production
# DATABASE_PATH=/app/data/database.db