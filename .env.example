# Recruiter Email Tracker - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_PATH=database.db

# Mailgun Configuration (Required for email processing)
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_WEBHOOK_SIGNING_KEY=your_webhook_signing_key_here
MAILGUN_DOMAIN=yourdomain.com

# Flask Configuration
FLASK_ENV=development
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# User 1 Notion Configuration
USER1_NOTION_TOKEN=secret_your_notion_integration_token_1
USER1_NOTION_DATABASE_ID=your_notion_database_id_1

# User 2 Notion Configuration  
USER2_NOTION_TOKEN=secret_your_notion_integration_token_2
USER2_NOTION_DATABASE_ID=your_notion_database_id_2

# User 3 Notion Configuration
USER3_NOTION_TOKEN=secret_your_notion_integration_token_3
USER3_NOTION_DATABASE_ID=your_notion_database_id_3

# Production Settings (for deployment)
# FLASK_ENV=production
# DATABASE_PATH=/app/data/database.db